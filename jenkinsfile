pipeline {
    agent none
    environment{
       TEST="test_value"
       TEST1="test_value"
    }
    stages {
        stage('Build') {
            agent {
                label 'slave1'
            }
            steps {
                sh '''
                   sleep 10
                   echo $TEST $TEST1
                   '''
            }
        }

        stage('Test') {
            agent any
            steps {
                sh '''
                    #!/bin/bash
                    ls -lrt
                    sleep 10
                    echo $TEST $TEST1
                '''
            }
        }

    }
}
